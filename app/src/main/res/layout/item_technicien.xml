<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ihm.rps.MainActivity"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="319dp"
        android:layout_marginTop="20dp"
        android:id="@+id/fragment_container"
        android:background="#b0e0e6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="12/10/2016 - 13H"
            android:ems="10"
            android:layout_marginStart="14dp"
            android:layout_marginTop="31dp"
            android:id="@+id/tv_heure"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="M. DUPONT"
            android:ems="10"
            android:id="@+id/tv_nom"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/tv_heure"
            android:layout_alignStart="@+id/tv_heure" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Machine à laver"
            android:ems="10"
            android:id="@+id/tv_categorie"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/tv_nom" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Intervention terminée"
            android:id="@+id/bt_terminee"
            android:layout_below="@+id/tv_categorie"
            android:layout_alignStart="@+id/tv_categorie"
            android:layout_marginTop="33dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:id="@+id/next"
        android:background="#b0e0e6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Suivant : 15H"
            android:ems="10"
            android:id="@+id/tv_next"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp" />
    </RelativeLayout>

</LinearLayout>